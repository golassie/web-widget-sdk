{
  "name": "@mxenabled/web-widget-sdk",
  "version": "0.0.1",
  "description": "MX Web Widget SDK",
  "main": "dist/index.js",
  "scripts": {
    "format": "npm run prettier -- -w",
    "prettier": "prettier src example",
    "clean": "[ -d dist ] && rm -r dist || true",
    "lint": "eslint src example",
    "build": "npm run clean && npm run build:tsc && npm run build:amd",
    "build:tsc": "tsc",
    "build:amd": "browserify -t [ babelify --global --presets [ @babel/preset-env ] ] dist/index-amd.js -o dist/bundle/mx-web-widget-sdk-amd.js",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mxenabled/react-native-widget-sdk"
  },
  "license": "MIT",
  "dependencies": {
    "@mxenabled/widget-post-message-definitions": "^1.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "eslint": "^8.11.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-trailing-spaces": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  }
}
