{
  "name": "@mxenabled/web-widget-sdk",
  "version": "1.0.0",
  "description": "MX Web Widget SDK",
  "main": "dist/index.js",
  "scripts": {
    "format": "npm run prettier -- -w",
    "prettier": "prettier src example",
    "clean": "[ -d dist ] && rm -r dist || true",
    "build": "npm run clean && npm run build:tsc && npm run build:amd",
    "build:tsc": "tsc",
    "build:amd": "browserify -t [ babelify --global --presets [ @babel/preset-env ] ] dist/index-amd.js -o dist/bundle/mx-web-widget-sdk-amd.js"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.mx.com:Sean.Brown/mx-web-widget-sdk.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mxenabled/widget-post-message-definitions": "^1.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
