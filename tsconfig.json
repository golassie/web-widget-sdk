{
  "compilerOptions": {
    "outDir": "./dist",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es6"
  },
  "include": ["src/**/*.ts", "tests/**/*", "src/index.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
